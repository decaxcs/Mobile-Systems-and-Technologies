<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <Button
            android:text="SWAP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btnSwap"
            app:layout_constraintStart_toEndOf="@+id/etFirstWord" android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"/>
    <Button
            android:text="CHECK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btnCheck"
            app:layout_constraintStart_toEndOf="@+id/etSecondWord" android:layout_marginStart="8dp"
            android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/btnSwap"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/etFirstWord"
            app:layout_constraintEnd_toStartOf="@+id/btnSwap" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" android:minHeight="48dp"
            android:hint="Enter First Word"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/etSecondWord"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:layout_marginTop="23dp" app:layout_constraintTop_toBottomOf="@+id/etFirstWord"
            android:minHeight="48dp" android:hint="Enter Second Word"/>
</androidx.constraintlayout.widget.ConstraintLayout>